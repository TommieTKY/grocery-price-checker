extends ../../common/layout

block layout-content 
    h1 Add Category
    if err
      p #{err}
    form.inputform(method="post", action=`/admin/category/update/${category._id}`)
      div 
        label(for="name") Name: 
        input(type="text", id="name", name="name")
      div 
        label(for="parentCategoryId") Parent Category Id: 
        input(type="text", id="parentCategoryId", name="parentCategoryId")
      div 
        button.confirmButton(type="submit") Update
        a.cancelButton(href="/admin/category/list") Cancel