extends ../../common/layout

block layout-content 
  h1 Category List
  div.addback
    a.addButton(href="/admin/category/add") Add Category
    a.backButton(href="/") Back

  table
    thead
      tr
        th ID
        th Category Name
        th Parent Category
        th Actions
    tbody
      each category in categories
        tr
          td #{category._id}
          td #{category.name}
          td #{category.parent_category_id ? category.parent_category_id.name : 'None'}
          td 
            a.updateButton(href=`/admin/category/update/${category._id}`) Update
            a.deleteButton(href=`/admin/category/delete/${category._id}`) Delete
